@model AuctionHouseWebApplication.Models.ItemBidPageModel

@{
    ViewData["Title"] = "AuctionBid";
}

<h2>BidPage</h2>

<h4>AuctionItem</h4>
<hr />
<p>@Model.ItemNumber - @Model.ItemDescription</p>
<div class="row">
    <div class="col-md-4">
        <form asp-action="SendAuctionBid">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ItemNumber" class="control-label"></label>
                <input asp-for="ItemNumber" class="form-control" type="hidden" />
                <span asp-validation-for="ItemNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ItemDescription" class="control-label"></label>
                <input asp-for="ItemDescription" class="form-control" type="hidden"  />
                <span asp-validation-for="ItemDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RatingPrice" class="control-label"></label>
                <input asp-for="RatingPrice" class="form-control" />
                <span asp-validation-for="RatingPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BidPrice" class="control-label"></label>
                <input asp-for="BidPrice" class="form-control" />
                <span asp-validation-for="BidPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BidCustomName" class="control-label"></label>
                <input asp-for="BidCustomName" class="form-control" />
                <span asp-validation-for="BidCustomName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BidCustomPhone" class="control-label"></label>
                <input asp-for="BidCustomPhone" class="form-control" />
                <span asp-validation-for="BidCustomPhone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BidTimestamp" class="control-label"></label>
                <input asp-for="BidTimestamp" class="form-control" />
                <span asp-validation-for="BidTimestamp" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
